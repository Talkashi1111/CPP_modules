	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug serena_my_love",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/serena_my_love",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [
				{
					"name": "DEBUG",
					"value": "1"
				}
			],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Build serena_my_love",
			"miDebuggerPath": "/usr/bin/gdb"
		}
	]
}
